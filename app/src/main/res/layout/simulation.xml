<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/progressbar">
    <ImageView
            android:layout_width="78dp"
            android:layout_height="72dp"
            app:srcCompat="@drawable/virtualica_logo" android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toStartOf="@+id/imageView7"
            android:layout_marginEnd="201dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="59dp"
            android:layout_height="72dp"
            app:srcCompat="@drawable/ic_outline_account_circle_24" android:id="@+id/imageView7"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="44dp" app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="369dp"
            android:layout_height="0dp"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent"
            android:indeterminate="true"
            android:indeterminateTint="#E85E33" android:visibility="visible" tools:visibility="visible"
            android:id="@+id/progressBar" android:layout_marginEnd="12dp"/>
    <ImageView
            android:layout_width="33dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/leftArrow" android:id="@+id/back"
            android:layout_marginEnd="360dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"/>
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="325dp"
            android:layout_height="360dp" android:name="com.virtualica.mobile_android.FirstFragment"
            android:id="@+id/questionsContanier"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Siguiente"
            android:layout_width="139dp"
            android:layout_height="49dp" android:id="@+id/next"
            style="@style/Button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/questionsContanier" android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="432dp"
            android:layout_height="224dp"
            app:srcCompat="@drawable/lineaNaranja" android:id="@+id/imageView8"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Simulacro"
            android:textColor="@color/redLogin"
            android:layout_width="107dp"
            android:layout_height="0dp" android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="visible"
            android:fontFamily="@font/baloo_bhai2_bold"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/imageView6"
            android:layout_marginStart="100dp" app:layout_constraintStart_toEndOf="@id/back"/>
    <Button
            android:text="Volver"
            android:layout_width="143dp"
            android:layout_height="48dp" android:id="@+id/backToQuestion"
            style="@style/ButtonOutline" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/questionsContanier" app:layout_constraintEnd_toStartOf="@+id/next"
            android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>