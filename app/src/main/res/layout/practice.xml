<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/progressbar">
    <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="369dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminate="true"
            android:indeterminateTint="#E85E33" android:visibility="visible" tools:visibility="visible"
            android:id="@+id/progressBar" android:layout_marginEnd="68dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/back"/>
    <ImageView
            android:layout_width="33dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/leftArrow" android:id="@+id/back"
            android:layout_marginEnd="440dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"/>
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="399dp"
            android:layout_height="592dp" android:name="com.virtualica.mobile_android.QuestionFragment"
            android:id="@+id/practice_questions_contanier"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent" tools:layout="@layout/question"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Siguiente"
            android:layout_width="272dp"
            android:layout_height="49dp" android:id="@+id/next"
            style="@style/Button" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/practice_questions_contanier" android:layout_marginEnd="120dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>