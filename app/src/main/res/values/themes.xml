<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Mobileandroid" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.Mobileandroid" parent="Base.Theme.Mobileandroid">
    </style>
    
    <style name="TextViewHeader">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/redLogin</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputsTextField" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hintInput</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/hintInput</item>
        <item name="hintTextColor">@color/redLogin</item>
    </style>

    <style name="InputsTextFieldAutoComplete" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hintInput</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/hintInput</item>
        <item name="hintTextColor">@color/redLogin</item>
    </style>



    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonText" parent="@style/Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:height">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/backgroundButton</item>
    </style>

    <style name="ButtonSelect">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:height">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="background">@color/purple</item>
    </style>


    <style name="ButtonOutline" parent="@style/Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/backgroundButton</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/hintInput</item>
        <item name="strokeColor">@color/backgroundButton</item>
        <item name="android:height">60dp</item>
    </style>
</resources>